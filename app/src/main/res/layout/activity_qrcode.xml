<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".qrcode.QRCodeActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginHorizontal="16dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Key："
      android:textSize="16dp"
      android:layout_gravity="center_vertical" />

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/qr_input_key"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:hint="请输入文本或链接"
      android:layout_gravity="center_vertical"
      android:textSize="16dp" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginHorizontal="16dp">

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/qr_generate_image_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginHorizontal="20dp"
      android:layout_marginVertical="3dp"
      android:text="Generate" />

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/qr_change_style_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginHorizontal="20dp"
      android:layout_marginVertical="3dp"
      android:text="Change Style" />
  </LinearLayout>

  <ImageView
    android:id="@+id/qr_code_iv"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="50dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginHorizontal="16dp">

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/qr_save_to_gallery_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginHorizontal="20dp"
      android:layout_marginVertical="3dp"
      android:text="Save To Gallery" />

  </LinearLayout>

</LinearLayout>